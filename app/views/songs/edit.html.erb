<%= form_for @song do |f|%>
	Title <%= f.text_field :title %><br>
	Release Year <%= f.number_field :release_year %><br>
	<%= f.check_box :released %> Released? <br>
	Artist Name<%= f.text_field :artist_name %><br>	
	Genre <%= f.text_field :genre %>
	<%= f.submit %>

	<% if @song.errors.any? %>
		<div id="error_explanation">
		<h2>
		<%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved.
		</h2>
		<ul>
			<%= @song.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<%end%>
		</ul>
		</div>
	<%end%>
<%end%>
